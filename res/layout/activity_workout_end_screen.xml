<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/popup_rounded"
    android:id="@+id/mainLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:layout_margin="10dp">
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Congratulations!"
        android:textSize="18pt"
        android:layout_gravity="center"
        android:textAlignment="center"
        style="@style/TextView_h1"/>
    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="You completed your workout."
        android:textSize="14pt"
        android:layout_gravity="center"
        android:textAlignment="center"
        style="@style/TextView_h2"/>
    <TextView
        android:id="@+id/time_taken_tv"
        android:tag="time_taken_tv"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Time taken: "
        android:textSize="10pt"
        android:layout_gravity="center"
        android:textAlignment="center"
        style="@style/TextView_h3"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:tag="comments_layout"
        android:layout_gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Comment on session"
            style="@style/TextView_h2"/>
        <EditText
            android:id="@+id/comment_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:tag="comment_et"
            style="@style/EditText_active"/>
    </LinearLayout>
    <Button
        android:id="@+id/finished_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Back to Menu"
        android:tag="finished_button"
        android:onClick="doneOnClick"
        style="@style/button_text"
        android:background="@drawable/button"/>
</LinearLayout>